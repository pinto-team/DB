{
  "$id": "https://yourdomain/schemas/orders/refunds.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Refund",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id":         { "type": "string", "format": "uuid", "readOnly": true },
    "order_id":   { "type": "string", "format": "uuid" },
    "payment_id": { "type": ["string","null"], "format": "uuid" },
    "amount":     { "type": "number", "minimum": 0 },
    "currency":   { "type": "string", "pattern": "^[A-Z]{3}$" },
    "reason":     { "type": ["string","null"], "maxLength": 500 },
    "status":     { "type": "string", "enum": ["pending","approved","rejected","processed","failed"], "default": "pending" },
    "processed_at": { "type": ["string","null"], "format": "date-time" },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true }
  },

  "required": ["order_id","amount","currency","status"],

  "x-pg": {
    "table": "refunds",
    "primaryKey": ["id"],
    "foreignKeys":[
      { "columns":["order_id"],"references":{"table":"orders","columns":["id"]},"onDelete":"CASCADE" }
    ],
    "indexes":[
      { "name":"idx_refunds_order","columns":["order_id"] },
      { "name":"idx_refunds_status","columns":["status"] }
    ]
  }
}
