{
  "$id": "https://yourdomain/schemas/product_option.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Option",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "product_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → products.id"
    },
    "option_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → options.id"
    },
    "sort_index": { "type": "integer", "default": 0 },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true }
  },

  "required": ["product_id", "option_id"],

  "x-pg": {
    "table": "product_options",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["product_id"],
        "references": { "table": "products", "columns": ["id"] },
        "onDelete": "CASCADE"
      },
      {
        "columns": ["option_id"],
        "references": { "table": "options", "columns": ["id"] },
        "onDelete": "CASCADE"
      }
    ],
    "unique": [
      { "columns": ["product_id", "option_id"] }
    ],
    "indexes": [
      { "name": "idx_product_options_product", "columns": ["product_id"] },
      { "name": "idx_product_options_sort", "columns": ["product_id", "sort_index"] }
    ],
    "triggers": [
      { "name": "trg_product_options_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
