{
  "$id": "https://yourdomain/schemas/store_settings.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Store Settings",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "store_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK â†’ stores.id"
    },

    "supports": {
      "type": "object",
      "description": "Store service capabilities",
      "properties": {
        "delivery": { "type": "boolean", "default": true },
        "pickup": { "type": "boolean", "default": true },
        "schedule_orders": { "type": "boolean", "default": false },
        "table_service": { "type": "boolean", "default": false }
      },
      "additionalProperties": false
    },

    "order_limits": {
      "type": ["object", "null"],
      "properties": {
        "min_subtotal": { "type": ["number", "null"], "minimum": 0 },
        "max_subtotal": { "type": ["number", "null"], "minimum": 0 }
      },
      "additionalProperties": false
    },

    "tax_settings": {
      "type": ["object", "null"],
      "properties": {
        "apply_vat": { "type": "boolean", "default": false },
        "vat_rate": { "type": ["number", "null"], "minimum": 0, "maximum": 100 }
      },
      "additionalProperties": false
    },

    "sla": {
      "type": ["object", "null"],
      "properties": {
        "default_prep_time_minutes": { "type": "integer", "minimum": 0, "default": 10 },
        "delivery_prep_time_minutes": { "type": ["integer", "null"], "minimum": 0 },
        "pickup_prep_time_minutes": { "type": ["integer", "null"], "minimum": 0 }
      },
      "additionalProperties": false
    },

    "timezone": { "type": "string", "default": "Asia/Tehran" },

    "display_settings": {
      "type": ["object", "null"],
      "properties": {
        "is_visible": { "type": "boolean", "default": true },
        "theme_color": { "type": ["string", "null"], "pattern": "^#([A-Fa-f0-9]{6})$" }
      },
      "additionalProperties": false
    },

    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["store_id", "supports"],

  "x-pg": {
    "table": "store_settings",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["store_id"],
        "references": { "table": "stores", "columns": ["id"] },
        "onDelete": "CASCADE"
      }
    ],
    "unique": [{ "columns": ["store_id"] }],
    "indexes": [
      { "name": "idx_store_settings_store", "columns": ["store_id"] }
    ],
    "triggers": [
      { "name": "trg_store_settings_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
