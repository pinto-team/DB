{
  "$id": "https://yourdomain/schemas/orders/order_items.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrderItem",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id":          { "type": "string", "format": "uuid", "readOnly": true },
    "order_id":    { "type": "string", "format": "uuid" },
    "product_id":  { "type": "string", "format": "uuid" },
    "variant_id":  { "type": ["string","null"], "format": "uuid" },
    "name":        { "type": "string", "maxLength": 255 },
    "quantity":    { "type": "integer", "minimum": 1 },
    "unit_price":  { "type": "number", "minimum": 0 },
    "discount":    { "type": "number", "minimum": 0 },
    "tax":         { "type": "number", "minimum": 0 },
    "total_price": { "type": "number", "minimum": 0 },
    "notes":       { "type": ["string","null"], "maxLength": 500 },
    "created_at":  { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at":  { "type": "string", "format": "date-time", "readOnly": true }
  },

  "required": ["order_id","product_id","quantity","unit_price","total_price"],

  "x-pg": {
    "table": "order_items",
    "primaryKey": ["id"],
    "foreignKeys":[
      { "columns":["order_id"],"references":{"table":"orders","columns":["id"]},"onDelete":"CASCADE" }
    ],
    "indexes":[
      { "name":"idx_order_items_order","columns":["order_id"] }
    ]
  }
}
