{
  "$id": "https://yourdomain/schemas/commerce/transactions.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transaction",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "merchant_id": { "type": "string", "format": "uuid" },
    "settlement_id": { "type": ["string", "null"], "format": "uuid" },
    "order_id": { "type": ["string", "null"], "format": "uuid" },
    "type": {
      "type": "string",
      "enum": ["order_income", "commission_fee", "service_fee", "refund", "adjustment", "payout"]
    },
    "direction": { "type": "string", "enum": ["credit", "debit"] },
    "source": { "type": "string", "enum": ["system", "manual", "integration"], "default": "system" },
    "amount": { "type": "number", "minimum": 0 },
    "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
    "reference": { "type": ["string", "null"], "maxLength": 120 },
    "notes": { "type": ["string", "null"], "maxLength": 500 },
    "status": { "type": "string", "enum": ["pending", "completed", "failed"], "default": "pending" },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id", "type", "direction", "amount", "currency"],

  "x-pg": {
    "table": "transactions",
    "primaryKey": ["id"],
    "foreignKeys": [
      { "columns": ["merchant_id"], "references": { "table": "merchants", "columns": ["id"] }, "onDelete": "CASCADE" },
      { "columns": ["settlement_id"], "references": { "table": "settlements", "columns": ["id"] }, "onDelete": "SET NULL" }
    ],
    "indexes": [
      { "name": "idx_transactions_merchant", "columns": ["merchant_id"] },
      { "name": "idx_transactions_type", "columns": ["type"] },
      { "name": "idx_transactions_status", "columns": ["status"] }
    ],
    "triggers": [
      { "name": "trg_transactions_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
