{
  "$id": "https://yourdomain/schemas/commerce/settlements.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Settlement",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "merchant_id": { "type": "string", "format": "uuid", "description": "FK â†’ merchants.id" },
    "period_start": { "type": "string", "format": "date" },
    "period_end": { "type": "string", "format": "date" },
    "currency": { "type": "string", "pattern": "^[A-Z]{3}$", "default": "IRR" },
    "total_orders": { "type": "integer", "minimum": 0 },
    "gross_sales": { "type": "number", "minimum": 0 },
    "total_fees": { "type": "number", "minimum": 0 },
    "total_commission": { "type": "number", "minimum": 0 },
    "adjustments": { "type": "number", "minimum": 0 },
    "net_payout": { "type": "number", "minimum": 0 },
    "payout_account_id": { "type": ["string", "null"], "format": "uuid" },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "paid", "failed", "reconciled"],
      "default": "pending"
    },
    "paid_at": { "type": ["string", "null"], "format": "date-time" },
    "notes": { "type": ["string", "null"], "maxLength": 500 },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id", "period_start", "period_end", "currency", "status"],

  "x-pg": {
    "table": "settlements",
    "primaryKey": ["id"],
    "foreignKeys": [
      { "columns": ["merchant_id"], "references": { "table": "merchants", "columns": ["id"] }, "onDelete": "CASCADE" },
      { "columns": ["payout_account_id"], "references": { "table": "payout_accounts", "columns": ["id"] }, "onDelete": "SET NULL" }
    ],
    "indexes": [
      { "name": "idx_settlements_merchant", "columns": ["merchant_id"] },
      { "name": "idx_settlements_status", "columns": ["status"] }
    ],
    "triggers": [
      { "name": "trg_settlements_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
