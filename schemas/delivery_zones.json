{
  "$id": "https://yourdomain/schemas/delivery_zone.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Delivery Zone",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "merchant_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → merchants.id"
    },
    "branch_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "FK → branches.id"
    },
    "name": { "type": "string", "minLength": 1, "description": "Zone name" },
    "type": {
      "type": "string",
      "enum": ["polygon", "radius"],
      "description": "Zone definition type"
    },
    "polygon": {
      "type": ["array", "null"],
      "description": "Polygon coordinates for zone boundary",
      "items": {
        "type": "object",
        "properties": {
          "lat": { "type": "number", "minimum": -90, "maximum": 90 },
          "lng": { "type": "number", "minimum": -180, "maximum": 180 }
        },
        "required": ["lat", "lng"],
        "additionalProperties": false
      }
    },
    "radius_meters": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Radius distance in meters (for type=radius)"
    },
    "center": {
      "type": ["object", "null"],
      "description": "Center coordinates (required for radius type)",
      "properties": {
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lng": { "type": "number", "minimum": -180, "maximum": 180 }
      },
      "additionalProperties": false
    },
    "min_order_subtotal": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "default": 0
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "Currency code"
    },
    "delivery_fee": {
      "type": "object",
      "description": "Delivery fee configuration",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["flat", "distance_tiered", "dynamic"],
          "default": "flat"
        },
        "amount": {
          "type": ["number", "null"],
          "minimum": 0,
          "multipleOf": 0.01
        },
        "tiers": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "max_km": { "type": "number", "minimum": 0 },
              "fee": { "type": "number", "minimum": 0, "multipleOf": 0.01 }
            },
            "required": ["max_km", "fee"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive"],
      "default": "active"
    },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id", "name", "type", "currency", "status"],

  "x-pg": {
    "table": "delivery_zones",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["merchant_id"],
        "references": { "table": "merchants", "columns": ["id"] },
        "onDelete": "CASCADE"
      },
      {
        "columns": ["branch_id"],
        "references": { "table": "branches", "columns": ["id"] },
        "onDelete": "SET NULL"
      }
    ],
    "indexes": [
      { "name": "idx_delivery_zones_merchant", "columns": ["merchant_id"] },
      { "name": "idx_delivery_zones_branch", "columns": ["branch_id"] },
      { "name": "idx_delivery_zones_status", "columns": ["status"] },
      { "name": "idx_delivery_zones_type", "columns": ["type"] }
    ],
    "unique": [
      { "columns": ["merchant_id", "name"], "where": "deleted_at IS NULL" }
    ],
    "triggers": [
      { "name": "trg_delivery_zones_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
