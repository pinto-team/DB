{
  "$id": "https://yourdomain/schemas/item.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "store_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → stores.id"
    },
    "menu_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → menus.id"
    },
    "section_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "FK → menu_sections.id"
    },
    "product_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Optional FK → products.id"
    },
    "variant_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Optional FK → product_variants.id"
    },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": ["string", "null"], "maxLength": 1000 },
    "sku": { "type": ["string", "null"], "maxLength": 100 },
    "image_media_id": { "type": ["string", "null"], "format": "uuid" },

    "price": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "amount": { "type": "number", "minimum": 0, "multipleOf": 0.01 },
        "compare_at": { "type": ["number", "null"], "minimum": 0 },
        "tax_rate_override": { "type": ["number", "null"], "minimum": 0, "maximum": 100 }
      },
      "required": ["amount"]
    },

    "availability": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "is_available": { "type": "boolean", "default": true },
        "sold_out_at": { "type": ["string", "null"], "format": "date-time" },
        "max_per_order": { "type": ["integer", "null"], "minimum": 1 }
      }
    },

    "dietary": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "is_vegan": { "type": "boolean", "default": false },
        "is_vegetarian": { "type": "boolean", "default": false },
        "is_halal": { "type": "boolean", "default": false },
        "is_kosher": { "type": "boolean", "default": false },
        "contains_allergens": {
          "type": ["array", "null"],
          "items": {
            "type": "string",
            "enum": ["gluten", "nuts", "dairy", "egg", "soy", "shellfish", "sesame", "fish", "other"]
          },
          "uniqueItems": true
        }
      }
    },

    "modifier_group_ids": {
      "type": ["array", "null"],
      "items": { "type": "string", "format": "uuid" },
      "uniqueItems": true
    },

    "display_order": { "type": "integer", "default": 0 },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "sold_out"],
      "default": "active"
    },

    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["store_id", "menu_id", "name", "price", "status"],

  "x-pg": {
    "table": "items",
    "primaryKey": ["id"],
    "foreignKeys": [
      { "columns": ["store_id"], "references": { "table": "stores", "columns": ["id"] }, "onDelete": "CASCADE" },
      { "columns": ["menu_id"], "references": { "table": "menus", "columns": ["id"] }, "onDelete": "CASCADE" },
      { "columns": ["section_id"], "references": { "table": "menu_sections", "columns": ["id"] }, "onDelete": "SET NULL" },
      { "columns": ["product_id"], "references": { "table": "products", "columns": ["id"] }, "onDelete": "SET NULL" },
      { "columns": ["variant_id"], "references": { "table": "product_variants", "columns": ["id"] }, "onDelete": "SET NULL" }
    ],
    "indexes": [
      { "name": "idx_items_store", "columns": ["store_id"] },
      { "name": "idx_items_menu", "columns": ["menu_id"] },
      { "name": "idx_items_section", "columns": ["section_id"] },
      { "name": "idx_items_status", "columns": ["status"] },
      { "name": "idx_items_display_order", "columns": ["display_order"] }
    ],
    "unique": [
      { "columns": ["menu_id", "name"], "where": "deleted_at IS NULL" }
    ],
    "triggers": [
      { "name": "trg_items_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ],
    "relations": {
      "belongsTo": [
        { "table": "menus", "fk": ["menu_id"] },
        { "table": "menu_sections", "fk": ["section_id"] }
      ],
      "hasMany": [
        { "table": "item_availability", "fk": ["item_id"] }
      ]
    }
  }
}
