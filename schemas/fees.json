{
  "$id": "https://yourdomain/schemas/commerce/fees.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fee",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },

    "merchant_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → merchants.id"
    },

    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120,
      "description": "Human-readable fee name (e.g. service_fee, packaging)"
    },

    "type": {
      "type": "string",
      "enum": ["flat", "percent"],
      "default": "flat",
      "description": "Calculation mode: fixed amount or percentage"
    },

    "amount": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "If type=percent → 0..100, if type=flat → currency amount"
    },

    "applies_to": {
      "type": "string",
      "enum": ["order", "delivery", "pickup"],
      "default": "order",
      "description": "Which part of the flow this fee applies to"
    },

    "is_taxable": {
      "type": "boolean",
      "default": false,
      "description": "Whether the fee amount is subject to tax"
    },

    "tax_code": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Optional tax code for integrations"
    },

    "effective_from": { "type": "string", "format": "date-time" },
    "effective_to":   { "type": ["string", "null"], "format": "date-time" },

    "status": {
      "type": "string",
      "enum": ["draft", "active", "expired", "disabled"],
      "default": "draft"
    },

    "notes": { "type": ["string", "null"], "maxLength": 500 },

    "created_by_user_id": { "type": ["string", "null"], "format": "uuid" },
    "approved_by_user_id": { "type": ["string", "null"], "format": "uuid" },
    "approved_at": { "type": ["string", "null"], "format": "date-time" },

    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id", "name", "type", "amount", "applies_to", "status"],

  "allOf": [
    {
      "if": { "properties": { "type": { "const": "percent" } } },
      "then": {
        "properties": {
          "amount": { "minimum": 0, "maximum": 100 }
        }
      }
    }
  ],

  "x-pg": {
    "table": "fees",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["merchant_id"],
        "references": { "table": "merchants", "columns": ["id"] },
        "onDelete": "CASCADE"
      }
    ],
    "indexes": [
      { "name": "idx_fees_merchant", "columns": ["merchant_id"] },
      { "name": "idx_fees_status", "columns": ["status"] },
      { "name": "idx_fees_effective", "columns": ["effective_from", "effective_to"] },
      { "name": "idx_fees_applies_to", "columns": ["applies_to"] }
    ],
    "unique": [
      { "columns": ["merchant_id", "name", "status"], "where": "status = 'active'" }
    ],
    "triggers": [
      { "name": "trg_fees_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
