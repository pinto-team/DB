{
  "$id": "https://yourdomain/schemas/schedule.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schedule",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "store_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → stores.id"
    },
    "branch_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "FK → branches.id"
    },
    "service": {
      "type": "string",
      "enum": ["delivery", "pickup", "dine_in"],
      "description": "Service type the schedule applies to"
    },
    "name": { "type": "string", "minLength": 1, "description": "Schedule name" },
    "timezone": { "type": "string", "default": "Asia/Tehran" },
    "effective_from": { "type": ["string", "null"], "format": "date-time" },
    "effective_to": { "type": ["string", "null"], "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["active", "disabled"],
      "default": "active"
    },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["store_id", "service", "name", "status"],

  "x-pg": {
    "table": "schedules",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["store_id"],
        "references": { "table": "stores", "columns": ["id"] },
        "onDelete": "CASCADE"
      },
      {
        "columns": ["branch_id"],
        "references": { "table": "branches", "columns": ["id"] },
        "onDelete": "SET NULL"
      }
    ],
    "indexes": [
      { "name": "idx_schedules_store", "columns": ["store_id"] },
      { "name": "idx_schedules_branch", "columns": ["branch_id"] },
      { "name": "idx_schedules_status", "columns": ["status"] },
      { "name": "idx_schedules_effective", "columns": ["effective_from", "effective_to"] }
    ],
    "unique": [
      { "columns": ["store_id", "service", "name"], "where": "deleted_at IS NULL" }
    ],
    "triggers": [
      { "name": "trg_schedules_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
