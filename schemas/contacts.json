{
  "$id": "https://yourdomain/schemas/contact.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contact",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "merchant_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK â†’ merchants.id"
    },
    "type": {
      "type": "string",
      "enum": ["main", "support", "manager", "other"],
      "default": "other"
    },
    "email": {
      "type": ["string", "null"],
      "format": "email",
      "maxLength": 255
    },
    "website": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "social": {
      "type": ["array", "null"],
      "description": "List of social media links",
      "items": {
        "type": "object",
        "properties": {
          "platform": { "type": "string" },
          "url": { "type": ["string", "null"], "format": "uri" }
        },
        "required": ["platform"],
        "additionalProperties": false
      }
    },
    "timezone": { "type": ["string", "null"], "description": "e.g., Asia/Tehran" },
    "status": {
      "type": "string",
      "enum": ["active", "inactive"],
      "default": "active"
    },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id", "type", "status"],

  "x-pg": {
    "table": "contacts",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["merchant_id"],
        "references": { "table": "merchants", "columns": ["id"] },
        "onDelete": "CASCADE"
      }
    ],
    "indexes": [
      { "name": "idx_contacts_merchant", "columns": ["merchant_id"] },
      { "name": "idx_contacts_type", "columns": ["type"] },
      { "name": "idx_contacts_status", "columns": ["status"] },
      { "name": "idx_contacts_email", "expression": "lower(email)" }
    ],
    "triggers": [
      { "name": "trg_contacts_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
