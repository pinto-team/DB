{
  "$id": "https://yourdomain/schemas/merchant_marketplace_mapping.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Merchant Marketplace Mapping",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "merchant_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → merchants.id"
    },
    "merchant_product_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → merchant_products.id"
    },
    "marketplace": {
      "type": "string",
      "enum": ["snapp", "digikala", "tapsi", "wolt", "shopify", "woocommerce", "custom"],
      "description": "Marketplace provider"
    },
    "external_product_id": {
      "type": "string",
      "maxLength": 128,
      "description": "External product identifier in marketplace"
    },
    "external_variant_id": {
      "type": ["string", "null"],
      "maxLength": 128,
      "description": "External variant ID if applicable"
    },
    "sync_status": {
      "type": "string",
      "enum": ["pending", "synced", "failed", "disabled"],
      "default": "pending"
    },
    "last_synced_at": { "type": ["string", "null"], "format": "date-time" },
    "error_message": { "type": ["string", "null"], "maxLength": 500 },
    "metadata": {
      "type": ["object", "null"],
      "description": "Optional JSON for extra integration data",
      "additionalProperties": true
    },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id", "merchant_product_id", "marketplace", "external_product_id"],

  "x-pg": {
    "table": "merchant_marketplace_mappings",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["merchant_id"],
        "references": { "table": "merchants", "columns": ["id"] },
        "onDelete": "CASCADE"
      },
      {
        "columns": ["merchant_product_id"],
        "references": { "table": "merchant_products", "columns": ["id"] },
        "onDelete": "CASCADE"
      }
    ],
    "unique": [
      { "columns": ["marketplace", "external_product_id"] },
      { "columns": ["merchant_product_id", "marketplace"] }
    ],
    "indexes": [
      { "name": "idx_smm_merchant", "columns": ["merchant_id"] },
      { "name": "idx_smm_marketplace", "columns": ["marketplace"] },
      { "name": "idx_smm_sync_status", "columns": ["sync_status"] }
    ],
    "triggers": [
      { "name": "trg_smm_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
