{
  "$id": "https://yourdomain/schemas/fulfillment.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fulfillment",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "merchant_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → merchants.id"
    },
    "branch_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "FK → branches.id"
    },

    "delivery": {
      "type": ["object", "null"],
      "description": "Delivery configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "modes": {
          "type": ["array", "null"],
          "items": {
            "type": "string",
            "enum": ["own_courier", "marketplace_courier"]
          },
          "uniqueItems": true
        },
        "estimate_minutes": {
          "type": "object",
          "properties": {
            "min": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 0 }
          },
          "required": ["min", "max"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "pickup": {
      "type": ["object", "null"],
      "description": "Pickup configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "estimate_minutes": {
          "type": "object",
          "properties": {
            "min": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 0 }
          },
          "required": ["min", "max"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true },
    "deleted_at": { "type": ["string", "null"], "format": "date-time", "readOnly": true }
  },

  "required": ["merchant_id"],

  "x-pg": {
    "table": "fulfillments",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["merchant_id"],
        "references": { "table": "merchants", "columns": ["id"] },
        "onDelete": "CASCADE"
      },
      {
        "columns": ["branch_id"],
        "references": { "table": "branches", "columns": ["id"] },
        "onDelete": "SET NULL"
      }
    ],
    "unique": [
      { "columns": ["merchant_id", "branch_id"], "where": "deleted_at IS NULL" }
    ],
    "indexes": [
      { "name": "idx_fulfillment_merchant", "columns": ["merchant_id"] },
      { "name": "idx_fulfillment_branch", "columns": ["branch_id"] }
    ],
    "triggers": [
      { "name": "trg_fulfillments_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
