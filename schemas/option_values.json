{
  "$id": "https://yourdomain/schemas/option_value.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Option Value",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "option_id": {
      "type": "string",
      "format": "uuid",
      "description": "FK → options.id"
    },
    "name": {
      "type": "object",
      "description": "Localized name (e.g., {'en': 'Red', 'fa': 'قرمز'})",
      "additionalProperties": { "type": "string" }
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "maxLength": 160,
      "description": "Unique per option"
    },
    "sort_index": { "type": "integer", "default": 0 },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true }
  },

  "required": ["option_id", "name", "slug"],

  "x-pg": {
    "table": "option_values",
    "primaryKey": ["id"],
    "foreignKeys": [
      {
        "columns": ["option_id"],
        "references": { "table": "options", "columns": ["id"] },
        "onDelete": "CASCADE"
      }
    ],
    "unique": [
      { "columns": ["option_id", "lower(slug)"] }
    ],
    "indexes": [
      { "name": "idx_option_values_option", "columns": ["option_id"] },
      { "name": "idx_option_values_sort", "columns": ["sort_index"] }
    ],
    "triggers": [
      { "name": "trg_option_values_set_updated_at", "timing": "BEFORE", "event": "UPDATE", "function": "set_updated_at()" }
    ]
  }
}
